{
  "_comment": "EA Bot V2 Configuration File - EURUSD",
  "_version": "2.0",
  "_last_update": "2025-01-31",
  "_description": "This file contains all configurable parameters for EA Bot V2. Edit values here instead of INPUT for easy deployment.",

  "A_CORE_SETTINGS": {
    "_description": "Core settings: Timeframes, Strategies, Risk, Data source",

    "timeframes": {
      "TF_M1": true,
      "TF_M5": true,
      "TF_M15": true,
      "TF_M30": true,
      "TF_H1": true,
      "TF_H4": true,
      "TF_D1": true
    },

    "strategies": {
      "S1_HOME": true,
      "S2_TREND": true,
      "S3_NEWS": true
    },

    "risk": {
      "FixedLotSize": 0.1,
      "MaxLoss_Fallback": -1000.0
    },

    "data_source": {
      "CSDL_Source": 1,
      "_note": "0=DataAutoOner, 1=DataAutoOner2(default), 2=DataAutoOner3"
    }
  },

  "B_STRATEGY_CONFIGURATIONS": {
    "_description": "Strategy-specific configurations for S1, S2, S3",

    "S1_filter": {
      "S1_UseNewsFilter": true,
      "MinNewsLevelS1": 20,
      "S1_RequireNewsDirection": true,
      "_note": "S1 NEWS filter: true=strict filtering, false=basic binary"
    },

    "S2_trend": {
      "S2_TrendMode": 0,
      "_note": "0=Follow D1 auto, 1=Force BUY, -1=Force SELL"
    },

    "S3_news": {
      "MinNewsLevelS3": 20,
      "EnableBonusNews": true,
      "BonusOrderCount": 2,
      "MinNewsLevelBonus": 20,
      "_note": "S3 NEWS configurations with bonus orders support"
    }
  },

  "C_RISK_PROTECTION": {
    "_description": "Risk management: Stoploss, Take profit, Health checks",

    "stoploss": {
      "StoplossMode": 1,
      "Layer2_Divisor": 20.0,
      "_note": "Mode: 0=NONE, 1=LAYER1(CSDL), 2=LAYER2(Margin)"
    },

    "take_profit": {
      "UseTakeProfit": false,
      "TakeProfit_Multiplier": 0.5,
      "_note": "Multiplier: 0.5=50%, 1.0=100%, 2.0=200% of max_loss"
    },

    "health": {
      "EnableWeekendReset": true,
      "EnableHealthCheck": true,
      "_note": "Weekend reset at Friday 23:50, Health check at 8h/16h"
    }
  },

  "D_AUXILIARY_SETTINGS": {
    "_description": "Performance and display settings",

    "performance": {
      "UseEvenOddMode": false,
      "_note": "Even/odd second split for load balancing"
    },

    "display": {
      "ShowDashboard": true,
      "DebugMode": false,
      "_note": "Dashboard=on-chart info, Debug=verbose logging"
    }
  }
}
